{

  "manifest_version": 2,
  "name": "Automatic Unit Converter",
  "version": "1.1",

  "description": "Automatically different (American) units to their SI/Europian counterparts.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
	  "exclude_matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"],
      "matches": ["<all_urls>"],
      "js": ["background.js"]
    }
  ]

}